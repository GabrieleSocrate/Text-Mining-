import re

def estrai_succo_8k(testo_grezzo):
    """
    Pulisce un Form 8-K rimuovendo il boilerplate (testata e firme)
    e mantenendo l'inglese originale per il text mining.
    """
    # 1. Trova l'inizio della vera notizia (qualsiasi Item tra 1.00 e 8.99)
    # Ignoriamo volutamente l'Item 9.01 che contiene solo la lista degli allegati
    pattern_inizio = re.search(r'Item\s*[1-8]\.\d{2}[^\n]*', testo_grezzo, re.IGNORECASE)
    
    # 2. Trova la fine della notizia (quando iniziano gli allegati o le firme)
    pattern_fine = re.search(r'(Item\s*9\.01|SIGNATURE)', testo_grezzo, re.IGNORECASE)
    
    if pattern_inizio:
        inizio = pattern_inizio.start()
        # Se trova la fine taglia lì, altrimenti prende fino alla fine del testo
        fine = pattern_fine.start() if pattern_fine else len(testo_grezzo)
        
        # Estraiamo il blocco pulito
        testo_pulito = testo_grezzo[inizio:fine].strip()
        
        # Pulizia estetica opzionale: rimuove spazi vuoti multipli
        testo_pulito = re.sub(r'\s+', ' ', testo_pulito)
        return testo_pulito
        
    return testo_grezzo # Restituisce il testo intero se non trova i pattern

# --- TEST SUL TUO ARTICOLO ---
